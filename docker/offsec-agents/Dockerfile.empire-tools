# RTPI OffSec Agent: Empire C2 Tools
# Command & Control, Post-Exploitation, and Payload Development
#
# Categories: C2 Frameworks, Payload Generation, Post-Exploitation, Listeners
# Primary Focus: Empire framework management and C2 operations
#
# MITRE ATT&CK Tactics: Command and Control (TA0011), Lateral Movement (TA0008), Persistence (TA0003)

FROM rtpi/offsec-base:latest

# Set agent type for MCP server
ENV AGENT_TYPE=empire-c2
ENV TOOLS_PATH=/opt/tools

# Switch to root for package installation
USER root

# Install C2 and post-exploitation dependencies
RUN apt-get update && apt-get install -y \
    # Python for Empire and tools
    python3-dev libffi-dev \
    # Network tools
    nmap netcat-openbsd socat \
    # SSL tools
    openssl libssl-dev \
    # Database
    sqlite3 \
    # SSH tools
    openssh-client sshpass \
    # Ruby for evil-winrm
    ruby ruby-dev \
    && rm -rf /var/lib/apt/lists/*

# Install PowerShell for Linux (binary archive method for ARM64 support)
RUN ARCH=$(uname -m) && \
    if [ "$ARCH" = "aarch64" ]; then PS_ARCH="arm64"; else PS_ARCH="x64"; fi && \
    PS_VERSION=$(curl -s https://api.github.com/repos/PowerShell/PowerShell/releases/latest | grep tag_name | cut -d '"' -f 4 | sed 's/v//') && \
    curl -sL "https://github.com/PowerShell/PowerShell/releases/download/v${PS_VERSION}/powershell-${PS_VERSION}-linux-${PS_ARCH}.tar.gz" -o /tmp/powershell.tar.gz && \
    mkdir -p /opt/microsoft/powershell/7 && \
    tar zxf /tmp/powershell.tar.gz -C /opt/microsoft/powershell/7 && \
    chmod +x /opt/microsoft/powershell/7/pwsh && \
    ln -s /opt/microsoft/powershell/7/pwsh /usr/local/bin/pwsh && \
    rm /tmp/powershell.tar.gz

# Install .NET SDK 8.0 (via Microsoft packages repo)
RUN apt-get update && \
    apt-get install -y wget && \
    . /etc/os-release && \
    wget -q "https://packages.microsoft.com/config/ubuntu/${VERSION_ID}/packages-microsoft-prod.deb" && \
    dpkg -i packages-microsoft-prod.deb && \
    rm packages-microsoft-prod.deb && \
    apt-get update && \
    (apt-get install -y dotnet-sdk-8.0 || echo "dotnet-sdk-8.0 not available for this architecture") && \
    rm -rf /var/lib/apt/lists/*

# Install Python packages for C2 operations
RUN pip3 install --no-cache-dir \
    pycryptodome \
    requests \
    flask \
    aiohttp \
    websockets \
    paramiko \
    pywinrm \
    impacket \
    pyngrok \
    netifaces

# Switch to root for tool cloning
USER root
WORKDIR /opt/tools

# =============================================================================
# EMPIRE C2 FRAMEWORK
# =============================================================================

# PowerShell Empire
RUN git clone --depth 1 https://github.com/BC-SECURITY/Empire.git 2>/dev/null && \
    cd Empire && \
    (pip3 install -e . 2>/dev/null || pip3 install poetry && poetry export -f requirements.txt | pip3 install -r /dev/stdin 2>/dev/null || true) && \
    echo "Empire: PowerShell post-exploitation framework" > TOOL_INFO.txt || true

# Starkiller - Empire GUI
RUN git clone --depth 1 https://github.com/BC-SECURITY/Starkiller.git 2>/dev/null && \
    echo "Starkiller: Empire web GUI" > Starkiller/TOOL_INFO.txt || true

# =============================================================================
# ALTERNATIVE C2 FRAMEWORKS
# =============================================================================

# Covenant - .NET C2
RUN git clone --depth 1 https://github.com/cobbr/Covenant.git 2>/dev/null && \
    echo "Covenant: .NET C2 framework" > Covenant/TOOL_INFO.txt || true

# Sliver - Go-based C2
RUN git clone --depth 1 https://github.com/BishopFox/sliver.git 2>/dev/null && \
    (cd sliver && make linux 2>/dev/null || true) && \
    echo "Sliver: Go-based C2 framework" > sliver/TOOL_INFO.txt || true

# Havoc - Modern C2
RUN git clone --depth 1 https://github.com/HavocFramework/Havoc.git 2>/dev/null && \
    echo "Havoc: Modern C2 framework" > Havoc/TOOL_INFO.txt || true

# Mythic - Cross-platform C2
RUN git clone --depth 1 https://github.com/its-a-feature/Mythic.git 2>/dev/null && \
    echo "Mythic: Cross-platform C2 framework" > Mythic/TOOL_INFO.txt || true

# =============================================================================
# PAYLOAD GENERATION
# =============================================================================

# Donut - Shellcode generator
RUN git clone --depth 1 https://github.com/TheWover/donut.git 2>/dev/null && \
    cd donut && make 2>/dev/null || true && \
    echo "donut: Shellcode generator for .NET/PE" > TOOL_INFO.txt || true

# ScareCrow - Payload creation framework
RUN git clone --depth 1 https://github.com/optiv/ScareCrow.git 2>/dev/null && \
    cd ScareCrow && go build -o scarecrow . 2>/dev/null || true && \
    echo "ScareCrow: EDR evasion payload framework" > TOOL_INFO.txt || true

# Villain - Backdoor generator
RUN git clone --depth 1 https://github.com/t3l3machus/Villain.git 2>/dev/null && \
    cd Villain && (pip3 install -r requirements.txt 2>/dev/null || true) && \
    echo "Villain: Backdoor generator and handler" > TOOL_INFO.txt || true

# Hoaxshell - PowerShell reverse shell
RUN git clone --depth 1 https://github.com/t3l3machus/hoaxshell.git 2>/dev/null && \
    echo "hoaxshell: PowerShell reverse shell generator" > hoaxshell/TOOL_INFO.txt || true

# Nimplant - Nim-based implant
RUN git clone --depth 1 https://github.com/chvancooten/NimPlant.git 2>/dev/null && \
    echo "NimPlant: Nim-based implant" > NimPlant/TOOL_INFO.txt || true

# =============================================================================
# STAGER & LOADER TOOLS
# =============================================================================

# PEzor - PE loader
RUN git clone --depth 1 https://github.com/phra/PEzor.git 2>/dev/null && \
    echo "PEzor: PE loader with evasion" > PEzor/TOOL_INFO.txt || true

# Freeze - Payload creation
RUN git clone --depth 1 https://github.com/optiv/Freeze.git 2>/dev/null && \
    (cd Freeze && go build -o freeze . 2>/dev/null || true) && \
    echo "Freeze: Payload creation framework" > Freeze/TOOL_INFO.txt || true

# Limelighter - Signed payload tool
RUN git clone --depth 1 https://github.com/Tylous/Limelighter.git 2>/dev/null && \
    echo "Limelighter: Code signing for payloads" > Limelighter/TOOL_INFO.txt || true

# =============================================================================
# POST-EXPLOITATION TOOLS
# =============================================================================

# PEASS-ng - Privilege escalation scripts
RUN git clone --depth 1 https://github.com/peass-ng/PEASS-ng.git PEASS-ng 2>/dev/null && \
    echo "PEASS-ng: Privilege escalation scripts" > PEASS-ng/TOOL_INFO.txt || true

# PrivescCheck - Windows privesc checker
RUN git clone --depth 1 https://github.com/itm4n/PrivescCheck.git 2>/dev/null && \
    echo "PrivescCheck: Windows privilege escalation checker" > PrivescCheck/TOOL_INFO.txt || true

# Seatbelt - Windows enumeration
RUN git clone --depth 1 https://github.com/GhostPack/Seatbelt.git 2>/dev/null && \
    echo "Seatbelt: Windows security enumeration" > Seatbelt/TOOL_INFO.txt || true

# LaZagne - Credential harvester
RUN git clone --depth 1 https://github.com/AlessandroZ/LaZagne.git 2>/dev/null && \
    echo "LaZagne: Credential harvesting tool" > LaZagne/TOOL_INFO.txt || true

# Mimikatz
RUN git clone --depth 1 https://github.com/gentilkiwi/mimikatz.git 2>/dev/null && \
    echo "mimikatz: Windows credential extraction" > mimikatz/TOOL_INFO.txt || true

# =============================================================================
# LATERAL MOVEMENT TOOLS
# =============================================================================

# CrackMapExec - Network attack toolkit (deprecated, use NetExec instead)
RUN pip3 install crackmapexec 2>/dev/null || true && \
    mkdir -p crackmapexec && \
    echo "crackmapexec: Network attack and lateral movement (deprecated - use NetExec)" > crackmapexec/TOOL_INFO.txt

# NetExec - CrackMapExec successor
RUN git clone --depth 1 https://github.com/Pennyw0rth/NetExec.git 2>/dev/null && \
    cd NetExec && (pip3 install . 2>/dev/null || pip3 install netexec 2>/dev/null || true) && \
    echo "NetExec: Network execution tool" > TOOL_INFO.txt || true

# Evil-WinRM - WinRM shell
RUN gem install evil-winrm && \
    mkdir -p evil-winrm && \
    echo "evil-winrm: WinRM penetration shell" > evil-winrm/TOOL_INFO.txt

# PSExec.py (part of impacket)
RUN mkdir -p impacket-tools && \
    echo "impacket: Network protocol implementation (psexec, wmiexec, etc.)" > impacket-tools/TOOL_INFO.txt

# =============================================================================
# LISTENER & HANDLER TOOLS
# =============================================================================

# Chisel - TCP/UDP tunnel (requires Go 1.25+, may fail)
RUN git clone --depth 1 https://github.com/jpillora/chisel.git 2>/dev/null && \
    (cd chisel && go build -o chisel . 2>/dev/null || true) && \
    echo "chisel: TCP/UDP tunneling" > chisel/TOOL_INFO.txt || true

# Ligolo-ng - Tunneling
RUN git clone --depth 1 https://github.com/nicocha30/ligolo-ng.git ligolo-ng 2>/dev/null && \
    (cd ligolo-ng && make build 2>/dev/null || true) && \
    echo "ligolo-ng: Advanced tunneling" > ligolo-ng/TOOL_INFO.txt || true

# Pwncat - Reverse shell handler
RUN pip3 install pwncat-cs 2>/dev/null || true && \
    mkdir -p pwncat && \
    echo "pwncat: Reverse shell handler" > pwncat/TOOL_INFO.txt

# =============================================================================
# CLEANUP AND PERMISSIONS
# =============================================================================

# Set ownership
RUN chown -R rtpi-agent:rtpi-agent /opt/tools

# Generate tool documentation
RUN /usr/local/bin/generate-docs.sh || true

# Create tool index for MCP discovery
RUN find /opt/tools -name "TOOL_INFO.txt" -exec cat {} \; > /docs/TOOLS_INDEX.md

# Switch to non-root user
USER rtpi-agent
WORKDIR /home/rtpi-agent

# Build MCP server
WORKDIR /mcp
RUN npm run build

# Expose MCP port
EXPOSE 9000

# Health check
HEALTHCHECK --interval=60s --timeout=10s --retries=3 \
    CMD pgrep -f "node.*mcp" || exit 1

# Start MCP server
ENTRYPOINT ["/usr/local/bin/mcp-entrypoint.sh"]
